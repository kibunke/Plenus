<div class="row">
    <h3>
		<i class="fa fa-edit"></i> Editar Cronograma General
	</h3>
</div>
<div class="row">
    <div class="col-sm-12">
        {{ form_start(form) }}
            <div class="hidden">
                {{ form_row(form.eventos) }}
            </div>
			
			<div class="form-group row">
				<label class="col-sm-2 control-label required">
					Eventos seleccionados
					<span class="badge badge-danger" title="Eventos filtrados">
						<span class="fa fa-filter"></span>
						<span id="eventos_seleccionados"></span>
					</span>					
				</label>
				<div class="col-sm-10">
					<div class="input-group">
						<select multiple class="form-control" id="juegosba_resultadobundle_cronograma_eventos_aux" placeholder="Seleccione los eventos a los cuales se aplica este cronograma">
						</select>
						<a href="#1" onclick="$.Default.selectEventos()" class="input-group-addon">{{ icon('search') }}</a>
					</div>
				</div>
			</div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

    <div class="col-sm-10 bg-warning" style="padding: 15px 50px">
        <h3 style="font-size: 20px;">Atención</h3>
        <p style="font-size: 15px;padding: 0;margin: 0">
            <li>Este cronograma sera aplicado a <strong id="cant_eve_selec">0</strong> eventos</li>
			<li>Para modificar la selección de eventos, utilice la {{ icon('search') }} (lupa) del formulario.</li>
        </p>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-green pull-right" onclick="$.Default.save(this)" href="#1" style="margin-top: 20px">
            <i class="fa fa-calendar"></i> Guardar
        </a>
    </div>
</div>
<style>
    .datetimepicker{
        z-index: 99999 !important;
    }
</style>
<script>
    $(document).ready(function(){
        var dp;
        $.fn.datetimepicker.dates['es'] = {
            days: ["Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"],
            daysShort: ["Dom", "Lun", "Mar", "Mié", "Jue", "Vie", "Sáb", "Dom"],
            daysMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa", "Do"],
            months: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"],
            monthsShort: ["Ene", "Feb", "Mar", "Abr", "May", "Jun", "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"],
            today: "Hoy",
            meridiem: '',
            clear: "Borrar",
            weekStart: 1,
            format: "dd/mm/yyyy"
        };
        dp = $('#juegosba_resultadobundle_cronograma_fecha').datetimepicker({
            sideBySide: true,
            useStrict:true,
            format: 'dd/mm/yyyy hh:ii',
            startDate: new Date({{ startDate }}),
            endDate: new Date({{ endDate }}),
            language: 'es'
        });
        dp.change(function(){
            $(".datetimepicker").hide();
        })
    })
</script>
