<div class="panel panel-white">
    <div class="panel-heading">
        <h4 class="panel-title">Tabla <span class="text-bold">de Cronogramas Generales</span></h4>
        <div class="panel-tools">
            <a class="btn btn-xs btn-transparent-grey" href="#1" onclick="$.Default.print()">
        		<i class="fa fa-print"></i>
        	</a>            
            {{ include('CommonBundle::dropdownTables.html.twig') }}
        </div>
    </div>
    <div class="panel-body">
        <table id="cronogramaTable" class="table table-striped table-hover dt-responsive">
            <thead>
                <tr>
                    <th class="center">#</th>
                    <th class="center">Fecha</th>
                    <th>Descripci√≥n</th>
                    <th>Eventos</th>
                    <th style="min-width: 80px;"></th>
                </tr>
            </thead>
            <tbody>
                {% for cronograma in cronogramas %}
                    <tr data-cronograma="{{cronograma.id}}">
                        <td class="center">{{ loop.index }}</td>
                        <td class="center">{{ cronograma.getRaw | raw }}</td>
                        <td>{{ cronograma.descripcion }}</td>
                        <td>
                            <span onclick="$.Default.eventoDetalle(this)" class="badge badge badge-danger wobble animated" style="cursor: pointer;">{{ cronograma.eventos | length }}</span>
                            <div class="hidden eventos_detalles">
                                {% for evento in cronograma.eventos %}
                                    <li>{{evento}}</li>
                                {% endfor %}
                            </div>
                        </td>
                        <td class="center">
                            <a href="#" onclick="$.Default.subview.loadEdit('{{ path('cronograma_general_edit', {'id' : cronograma.id }) }}')" class="btn btn-xs btn-azure tooltips" data-placement="top" data-original-title="Crear" data-startFrom="right" title="Editar Cronograma">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a href="#" onclick="$.Default.subview.loadEdit('{{ path('cronograma_general_new_copia', {'id' : cronograma.id }) }}')" class="btn btn-xs btn-orange tooltips" data-placement="top" data-original-title="Crear" data-startFrom="right" title="Crear una copia del Cronograma">
                                <span class="fa fa-copy"></span>
                            </a>
                            <a href="#" onclick="$.Default.cronogramaDelete('{{ path('cronograma_general_delete', {'id' : cronograma.id }) }}')" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="Crear" data-startFrom="right" title="Eliminar Cronograma">
                                <span class="fa fa-trash"></span>
                            </a>                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>