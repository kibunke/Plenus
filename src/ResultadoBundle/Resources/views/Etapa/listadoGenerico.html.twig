<table id="equipoTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center" style="width: 10px"></th>
            <th class="text-center">Regi√≥n</th>
            <th class="text-center">Muincipio</th>
            <th>Equipo/Participante</th>
            <th style="width: 95px"></th>
        </tr>
    </thead>
    <tbody>
        {% for equipo in etapa.equipos %}
            <tr data-plaza="{{ equipo.id }}">
                <td class="text-center"><i class="fa fa-ellipsis-v">&nbsp;&nbsp;</i></td>
                <td class="text-center"><b>{{ equipo.planilla.municipio.regionDeportiva }}</b></td>
                <td>{{ equipo.planilla.municipio.nombre }}</td>
                <td>{{ equipo.getNombreCompletoRaw | raw }}</td>
                <td class="text-center">
                    {% if is_granted('ROLE_RESULTADO_EQUIPO_SHOW') %}
                        <button onclick="$.Evento.equipo.show({{ equipo.id }})" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Ver detalle">
                            <i class="fa fa-eye"></i>
                        </button>
                    {% endif %}
                    {% if equipo.canEdit() and is_granted('ROLE_RESULTADO_EQUIPO_EDIT') %}
                        <a href="{{ path('equipo_edit', {'equipo': equipo.id}) }}" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="Editar equipo">
                            <i class="fa fa-edit"></i>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
