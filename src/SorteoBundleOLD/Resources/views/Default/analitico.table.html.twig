<div class="panel panel-white">
    <div class="panel-heading">
        <h4 class="panel-title">Tabla <span class="text-bold">analítica de finalistas</span></h4>
        <div class="panel-tools">
            {{ include('CommonBundle::dropdownTables.html.twig') }}
        </div>
    </div>
    <style>
        #analíticalTable {width: 100% !important;}
        #analiticalTable th,#analiticalTable td{
            text-align: center;
            background: #ccc;
        }
        #analiticalTable .equipos{
            background: #a0db8e
        }
        #analiticalTable .participantes{
            background: #8ec4d0
        }
        #analiticalTable .totalesFinal{
            background: #FF6633;
        }
    </style>
    <div class="panel-body">
        <table id="analiticalTable" class="table table-striped table-hover dt-responsive">
            <thead>
                <tr>
                    <th style="min-width: 75px">#</th>
                    <th>Municipio</th>
                    <th></th>
                    <th class="equipos"><i class="fa fa-users"> Equipos </th>
                    <th class="participantes"><i class="fa fa-asterisk"></i> Participantes </th>
                </tr>
            </thead>
            <tbody>
                {% for item in analitico %}
                    <tr>
                        <td>
                            <i class="fa fa-random" title="Regional"></i>
                            {{ item.regional | replace({ (item.reg) : '<strong>'~item.reg~'</strong>'}) | raw }}
                        </td>
                        <td style="text-align: left">
                            {{ item.municipioNombre }}
                            <a href="#example-subview-1" onclick="$.Default.subview.load('{{ path('consulta_analitico_finalistas_detalle', { 'municipio': item.municipio }) }}')" class="btn btn-xs btn-green tooltips show-sv pull-right" data-placement="top" data-original-title="Ver Detalle" data-startFrom="right">
                                <span class="fa fa-arrow-right"></span>
                            </a>                            
                        </td>
                        <td></td>
                        <td class="equipos">{{ item.cantEquipos }}</td>
                        <td class="participantes">{{ item.cantParticipantes }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="totalesFinal">TOTALES</td>
                    <td class="totalesFinal"><i class="fa fa-refresh fa-spin"></i></td>
                    <td class="totalesFinal"><i class="fa fa-refresh fa-spin"></i></td>
                </tr>
            </tfoot>
        </table>
        Cantidad de municipios con finalistas : {{ analitico | length }}
    </div>
</div>