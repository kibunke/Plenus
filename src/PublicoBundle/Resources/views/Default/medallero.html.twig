{% extends 'PublicoBundle::layout.html.twig' %}

{% block contenido %}
    <div class="row">
        <div class="col-sm-12">
            <h2 style="color: #000;text-align: center;font-weight: bold;">
                Final Provincial 2016
                <a href="{{ path('publico_index') }}" class="btn-info btn pull-right"><span class="fa fa-home"></span> Volver</a>
            </h2>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-12">
                <div class="panel panel-green">
                    <div class="panel-heading border-light">
                        <h4 class="panel-title">Medallero General</h4>
                    </div>
                    <div class="panel-body no-padding">
                        <div class="tabbable no-margin no-padding partition-dark">
                            <div class="tab-content partition-white">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th><span class="fa fa-building-o"></span> Municipio</th>
                                            <th class="center"><img style="height: 35px;" src="{{ asset('bundles/resultado/images/medallas/oro_thumb.png') }}"></th>
                                            <th class="center"><img style="height: 35px;" src="{{ asset('bundles/resultado/images/medallas/plata_thumb.png') }}"></th>
                                            <th class="center"><img style="height: 35px;" src="{{ asset('bundles/resultado/images/medallas/bronce_thumb.png') }}"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for municipio in municipios %}
                                            <tr>
                                                <td class="center">
                                                    {#<span class="fa fa-ellipsis-v"></span>#}
                                                    {{ loop.index }}
                                                </td>
                                                <td>
                                                    <a href="{{ path('publicoMedallero_detalle', {'id' : municipio['id'] }) }}"
                                                    {% if (loop.index < 0 )%}
                                                        <span class="text-small block text-light" style="font-size: 15px !important;">{#{ municipio["region"] | raw }#}<strong><small><i class="fa fa-spinner fa-spin"></i></small>/<i class="fa fa-spinner fa-spin"></i></strong></span>
                                                        <span class="text-large" title="{{ municipio["nombre"] }}"> <i class="fa fa-spinner fa-spin fa-lg"></i>{#{ municipio["nombre"] }#}</span>
                                                    {% else %}
                                                        <span class="text-small block text-light" style="font-size: 15px !important;">{{ municipio["region"] | raw }}</span>
                                                        <span class="text-large" title="{{ municipio["nombre"] }}">{{ municipio["nombre"] }}</span>
                                                    {% endif %}
                                                    {#
                                                    <a href="#" class="btn">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>#}
                                                </td>
                                                <td class="center">
                                                    {{ municipio["medallero"][0] }}
                                                </td>
                                                <td class="center">
                                                    {{ municipio["medallero"][1] }}
                                                </td>
                                                <td class="center">
                                                    {{ municipio["medallero"][2] }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- start: SUBVIEW EXAMPLE FOR THIS PAGE ONLY -->
    <a id="sub_go" href="#example-subview-1" class="hidden show-sv"></a>
    <div id="example-subview-1" class="no-display">
        <div class="col-md-10 col-md-offset-1 ajax-cont"></div>
    </div>
{% endblock %}
{% block otherStylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/common/plugins/jstree/dist/themes/default/style.css') }}">
{% endblock %}

{% block otherJavascripts %}
    <script src="{{ asset('bundles/common/plugins/jstree/dist/jstree.min.js') }}"></script>
<script>
        (function ($) {
            // no se sobreescribe el namespace, si ya existe
            $.Default = $.Default || {};
            $.Default.init = function() {
            }          
        })(jQuery);
        $(document).ready(function(){$.Default.init();});
    </script>    
{% endblock %}