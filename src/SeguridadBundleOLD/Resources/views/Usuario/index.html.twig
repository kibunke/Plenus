        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Listado de Usuarios <small>Todo lo referido a los usuarios del sistema</small></h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <ul class="nav navbar-right">
                    <!-- start: TO-DO DROPDOWN -->
                    <li class="dropdown">
                        <a  href="{{ path('usuario_new') }}">
                            <i class="fa fa-user"></i> NUEVO
                        </a>
                    </li>
        
                    <li class="menu-search">
                        <a href="#">
                            <i class="fa fa-search"></i> BUSCAR
                        </a>
                        <!-- start: SEARCH POPOVER -->
                        <div class="popover bottom search-box transition-all">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                <!-- start: SEARCH FORM -->
                                <form class="" id="searchform" action="#">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Buscar">
                                        <span class="input-group-btn">
                                            <button class="btn btn-main-color btn-squared" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </form>
                                <!-- end: SEARCH FORM -->
                            </div>
                        </div>
                        <!-- end: SEARCH POPOVER -->
                    </li>
                </ul>
                <!-- end: TOP NAVIGATION MENU -->
            </div>
        </div>
    </div>
{% endblock %}
{% block contenidoBreadcrumb %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('usuario') }}">
                        Usuario
                    </a>
                </li>
                <li class="active">
                    Listado
                </li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block contenidoData %}
    <div class="panel-heading">
        <h4 class="panel-title">Tabla <span class="text-bold">de usuarios</span></h4>
        <div class="panel-tools">
            <div class="dropdown">
                <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                    <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                    <li>
                        <a class="panel-collapse collapses" href="#">
                            <i class="fa fa-angle-up"></i> <span>Minimizar</span>
                        </a>
                    </li>
                    <li>
                        <a class="panel-refresh" href="#">
                            <i class="fa fa-refresh"></i> <span>Recargar</span>
                        </a>
                    </li>
                    {#
                    <li>
                        <a class="panel-config" href="#panel-config" data-toggle="modal">
                            <i class="fa fa-wrench"></i> <span>Configurations</span>
                        </a>
                    </li>#}
                    <li>
                        <a class="panel-expand" href="#">
                            <i class="fa fa-expand"></i> <span>Fullscreen</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <style>
        .popover-content{
            overflow: hidden;
        }
    </style>
    <div class="panel-body">
        <table id="userTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Usuario (Nombre)</th>
                    <th>Perfil</th>
                    <th><i class="fa fa-comment-o fa-lg" title="Contacto"></i></th>
                    <th><i class="fa fa-user fa-lg" title="Activo"></i></th>
                    <th><i class="fa fa-unlink fa-lg" title="Logueado"></i></th>
                    <th>Logs</th>
                    <th style="min-width: 95px"></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td><strong>{{ entity.usuario }}</strong>
                            <i style="font-size: 12px">
                                ({{ entity.getNombreCompleto }})
                            </td>
                        <td>{{ entity.perfil }}</td>
                        <td>
                            <a href="#1" class="pop" data-toggle="popover" data-placement="left" title="" data-animation="{'html':'true'}" data-content="
                                <i class='fa fa-envelope-o'>&nbsp;{{ entity.email }}</i><br/>
                                <i class='fa fa-phone'>&nbsp;{{ entity.telefono}}</i>
                            " data-original-title="Información de contacto">
                                <span title="Información de contacto" class="fa fa-comment-o fa-lg"></span>
                            </a>
                        </td>                        
                        <td>
                            {% if entity.activo %}
                                <i class="fa fa-check-circle-o fa-lg" style="color: #38d683"><i class="sr-only">si</i></i>
                            {% else %}
                                <i class="fa fa-times-circle-o fa-lg" style="color: #ea8557"><i class="sr-only">no</i></i>
                            {% endif %}
                        </td>
                        <td>
                            {% if entity.logueado %}
                                <i class="fa fa-check-circle-o fa-lg tooltips" data-placement="top" data-original-title="{{ entity.getUltimaOperacion|date("d/m/y - g:ia") }}" style="color: #38d683"><i class="sr-only">{{ entity.getUltimaOperacion|date("d/m/y - g:ia") }}</i></i>
                            {% else %}
                                <i class="fa fa-times-circle-o fa-lg tooltips" data-placement="top" data-original-title="{% if entity.ultimaOperacion %} {{ entity.ultimaOperacion|date("d/m/y - g:ia") }} {% else %} {{ 'Nunca' }} {% endif %}" style="color: #ea8557"><i class="sr-only">{% if entity.ultimaOperacion %} {{ entity.ultimaOperacion|date("d/m/y - g:ia") }} {% else %} {{ '0' }} {% endif %}</i></i>
                            {% endif %}                            
                        </td>
                        <td>
                            <a href="#1" class="pop btn btn-xs btn-dark-yellow" data-toggle="popover" data-placement="left" title="" data-animation="{'html':'true'}" data-content="
                                <b>Ult. login :</b>{% if (entity.ultimoLogin) %}{{ entity.ultimoLogin|date("d/m/y - g:ia") }}{% else %}{{ "Nunca" }}{% endif %}<br/>
                                <b>IP:</b>{{ entity.iplogin}}<br/>
                                <b>Ult. operación :</b>{% if (entity.ultimaOperacion) %}{{ entity.ultimaOperacion|date("d/m/y - g:ia") }}{% else %}{{ "Nunca" }}{% endif %}<br/>
                                <b>Creado :</b>{% if (entity.createdAt) %}{{ entity.createdAt|date("d/m/y - g:ia") }}{% else %}{{ "No Definido" }}{% endif %}<br/>
                                <b>Por:</b>{{ entity.createdBy }}<br/>
                                <b>Modificado:</b>{% if (entity.updatedAt) %}{{ entity.updatedAt|date("d/m/y - g:ia") }}{% else %}{{ "Sin modificar" }}{% endif %}<br/>
                                <b>Por:</b>{{ entity.updatedBy }}
                                " data-original-title="Información usuario">
                                <span title="Información de cambios" class="fa fa-info-circle"></span>
                            </a>
                        </td>
                        <td class="center">
                            <div class="visible-md visible-lg hidden-sm hidden-xs">
                                <a href="{{ path('usuario_show', { 'id': entity.id }) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Ver"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="Editar"><i class="fa fa-edit"></i></a>
                                <a href="#" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="Eliminar"><i class="fa fa-times fa fa-white"></i></a>
                            </div>
                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="btn-group">
                                    <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                                        <i class="fa fa-cog"></i> <span class="caret"></span>
                                    </a>
                                    <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                                        <li>
                                            <a role="menuitem" tabindex="-1" href="{{ path('usuario_show', { 'id': entity.id }) }}">
                                                <i class="fa fa-eye"></i> Ver
                                            </a>
                                        </li>
                                        <li>
                                            <a role="menuitem" tabindex="-1" href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                                                <i class="fa fa-edit"></i> Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a role="menuitem" tabindex="-1" href="#">
                                                <i class="fa fa-times"></i> Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block otherJavascripts %}
    <script>
        $(".pop").popover({offset: 10,html: true,delay: { show: 50, hide: 25 }});
        $('#userTable').dataTable( {
            "autoWidth": false,
            "language": {
                "url": "{{ asset('bundles/common/plugins/DataTables/Spanish.json') }}"
            },                
            "columnDefs": [ {
                "searchable": false,
                "orderable": false,
                "targets": [0,3,6,7]
            } ],
            "order": [[ 5, 'desc' ]]
        });
    </script>
{% endblock %}    