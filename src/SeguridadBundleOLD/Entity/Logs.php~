<?php

namespace JuegosBA\SeguridadBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Doctrine\Common\Collections\ArrayCollection;

use Gedmo\Mapping\Annotation as Gedmo;

use Symfony\Component\Security\Core\User\UserInterface;
use Symfony\Component\Security\Core\Role\RoleHierarchy;
use Symfony\Component\Security\Core\Role\Role;

/**
 * JuegosBA\SeguridadBundle\Entity\Logs
 * 
 * @ORM\Table(name="services_juegosba_admin.Logs")
 * @ORM\Entity()
 * @Gedmo\Loggable 
 */

class Logs
{  
    /**
     * @var integer $id
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;
    
    /**
     * @ORM\ManyToOne(targetEntity="Usuario")
     * @ORM\JoinColumn(name="usuario", referencedColumnName="id")
     **/
    protected $usuario;
    
    /**
     * @var datetime $login
     *
     * @ORM\Column(name="login", type="datetime", nullable=true)
     */
    private $login;    
    
    /**
     * @var string $actividad
     *
     * @ORM\Column(name="actividad", type="string", length=50)
     */
    protected $actividad;
    
    /**
     * @var string $ip
     *
     * @ORM\Column(name="ip", type="string", length=50)
     */
    protected $ip;    
    
    /**
     * __construct
     */    
    public function __construct($user,$ip,$actividad='login')
    {
        $this->login = new \DateTime();
        $this->usuario = $user;
        $this->actividad = $actividad;
        $this->ip = $ip;   
    }
    
    /**
     * __toString
     */    
    public function __toString()
    {
        return 'logs';
    }
    

    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set login
     *
     * @param \DateTime $login
     * @return Logs
     */
    public function setLogin($login)
    {
        $this->login = $login;

        return $this;
    }

    /**
     * Get login
     *
     * @return \DateTime 
     */
    public function getLogin()
    {
        return $this->login;
    }

    /**
     * Set usuario
     *
     * @param \JuegosBA\SeguridadBundle\Entity\Usuario $usuario
     * @return Logs
     */
    public function setUsuario(\JuegosBA\SeguridadBundle\Entity\Usuario $usuario = null)
    {
        $this->usuario = $usuario;

        return $this;
    }

    /**
     * Get usuario
     *
     * @return \JuegosBA\SeguridadBundle\Entity\Usuario 
     */
    public function getUsuario()
    {
        return $this->usuario;
    }

    /**
     * Set actividad
     *
     * @param string $actividad
     * @return Logs
     */
    public function setActividad($actividad)
    {
        $this->actividad = $actividad;

        return $this;
    }

    /**
     * Get actividad
     *
     * @return string 
     */
    public function getActividad()
    {
        return $this->actividad;
    }
}
