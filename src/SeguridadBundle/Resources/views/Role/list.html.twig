{% block contenidoData %}
    <div class="panel-heading">
        <h4 class="panel-title">Tabla <span class="text-bold">de roles</span></h4>
        <div class="panel-tools">
            <div class="dropdown">
                <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                    <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                    <li>
                        <a class="panel-collapse collapses" href="#">
                            <i class="fa fa-angle-up"></i> <span>Minimizar</span>
                        </a>
                    </li>
                    <li>
                        <a class="panel-refresh" href="#">
                            <i class="fa fa-refresh"></i> <span>Recargar</span>
                        </a>
                    </li>
                    <li>
                        <a class="panel-expand" href="#">
                            <i class="fa fa-expand"></i> <span>Fullscreen</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <style>
        .popover-content{
            overflow: hidden;
        }
    </style>
    <div class="panel-body">
        <table id="list_roles" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="">Nombre</th>
                    <th class="text-center" title="Role Activo"><span class="fa fa-active fa-lg"></span></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
{% endblock %}
{% block otherJavascripts %}
    <script type="text/javascript">
        (function ($) {
            // no se sobreescribe el namespace, si ya existe
            var _table;
            $.Default = $.Default || {};
            $.Default.init = function() {
                 _table=$('#list_roles').DataTable({
                    "processing": true,
                    "serverSide": true,
                    "ajax": {
                        "url": '{{ path('role_list_datatable') }}',
                        "type": 'POST'
                    },
                    "language" : {
                        "url" : "{{ asset('assets/common/Spanish.json') }}"
                    },
                    "columns": [
                        { "data": "id" },
                        { "data": "name" },
                        { "data": "isActive" }
                    ],
                    "bLengthChange" : true,
                    "bFilter" : true,
                    "order": [[ 0, 'asc' ]],
                    "pageLength" : 25,
                    "columnDefs": [
                        {
                            "searchable": false,
                            "orderable": false,
                            "targets": [0,2]
                        },
                    ],
                    "fnDrawCallback": function(oSettings, json) {
                        $('[data-toggle="popover"]').popover();
                        $input = $('#list_roles_filter input');
                        if ($input.val().length>0) {
                            $('#list_roles tbody td').each(function(){
                                $td=$(this);
                                if ($td.text().toUpperCase().indexOf($input.val().toUpperCase())>-1) {
                                    $td.html($td.text().toUpperCase().replace($input.val().toUpperCase(),'<span class="occurrence">'+$input.val().toUpperCase()+'</span>'))
                                }
                            });
                        }
                       // $.Default.charts(_table.ajax.json().cantRoles);
                    }
                });
            },
            $.Default.charts = function(){}
        })(jQuery);
        $(document).ready(function(){$.Default.init();});
    </script>
{% endblock %}    