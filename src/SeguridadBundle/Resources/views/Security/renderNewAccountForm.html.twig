<form class="form-register" action="{{ path('_new_account') }}" method="post">
    {{ form_widget(form._token) }}
    <fieldset>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-id-card-o fa-lg"></i></div>
                {{ form_widget(form.persona.nombre) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-id-card-o fa-lg"></i></div>
                {{ form_widget(form.persona.apellido) }}
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-id-card-o fa-default fa-lg"></i>
                    <i class="fa fa-check fa-lg hide" aria-hidden="true"></i>
                    <i class="fa fa-times fa-lg hide" aria-hidden="true"></i>
                </div>
                <div class="col-sm-4 no-padding">{{ form_widget(form.persona.tipoDocumento) }}</div>
                <div class="col-sm-8 no-padding">{{ form_widget(form.persona.dni) }}</div>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-user fa-default fa-lg"></i>
                    <i class="fa fa-check fa-lg hide" aria-hidden="true"></i>
                    <i class="fa fa-times fa-lg hide" aria-hidden="true"></i>
                </div>
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-lg"></i></div>
                {{ form_widget(form.perfil) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-puzzle-piece fa-lg"></i></div>
                {{ form_widget(form.cargo) }}
            </div>
        </div>
        <div class="form-group has-feedback">    
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-envelope fa-default fa-lg"></i>
                    <i class="fa fa-check fa-lg hide" aria-hidden="true"></i>
                    <i class="fa fa-times fa-lg hide" aria-hidden="true"></i>                    
                </div>
                {{ form_widget(form.persona.email) }}
            </div>
        </div>
        <div class="form-group">    
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-building fa-lg"></i></div>
                {{ form_widget(form.persona.municipio) }}
            </div>
        </div>                        
        <div class="form-actions">
            <button type="submitt" class="btn btn-green pull-right">
                Enviar <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
    </fieldset>
</form>