{#{ form_start(form) }#}
<form class="form-forgot" action="{{ path('_reset_password_step1') }}" method="post">
    {{ form_widget(form._token) }}
    <fieldset>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-lg"></i></div>
                {{ form_widget(form._username) }}
            </div>
        </div>
        <div class="form-group">    
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-envelope fa-lg"></i></div>
                {{ form_widget(form._email) }}
            </div>
        </div>
        <div class="form-actions">
            <button type="submitt" class="btn btn-green pull-right">
                Enviar <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
    </fieldset>
</form>