                                        }
                        }
                    ],
                    "drawCallback": function( oSettings ) {
                        $('#tableModalidad').parents('.panel').unblock();
                    }
                });
            }
        })(jQuery);
        $(document).ready(function(){$.Dimension.init();});
    </script>
