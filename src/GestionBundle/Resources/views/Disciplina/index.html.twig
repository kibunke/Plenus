                <ul class="nav navbar-right">
                    <!-- start: TO-DO DROPDOWN -->
                    <li class="dropdown">
                        <a href="#1" onclick="$.Default.openAjaxForm('{{ path('disciplina_new') }}','Nueva Disciplina')">
                            <i class="fa fa-plus"></i> NUEVA
