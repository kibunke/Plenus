{% extends 'CommonBundle::layout.html.twig' %}

{% block contenidoToolbar %}
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1><i class="fa fa-list-ol"></i> Listado de Inscriptos <small>Todo lo referido a los inscriptos de las disciplinas</small></h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <ul class="nav navbar-right">
                    <!-- start: TO-DO DROPDOWN -->
                    <li class="dropdown">
                        <a  href="{{ path('inscripcion')}}" >
                            <i class="fa fa-arrow-left"></i> VOLVER
                        </a>
                    </li>
                    {% if is_granted('ROLE_INSCRIPCION_NEW') %}
                        <li class="dropdown">
                            <a  href="#1" onclick="$.Default.inscripto.newModal('{{ path('inscripto_new', { 'id': evento.id }) }}')">
                                <i class="fa fa-user"></i> NUEVO
                            </a>
                        </li>
                    {% endif %}
                </ul>
                <!-- end: TOP NAVIGATION MENU -->
