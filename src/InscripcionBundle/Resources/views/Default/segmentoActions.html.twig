<div class="visible-md visible-lg hidden-sm hidden-xs">
    {% if is_granted('ROLE_INSCRIPCION_PLANILLA_PRINT') %}
        <a href="{{ path('planilla_print', {'segmento': entity.id}) }}" class="btn btn-xs btn-blue" title="Imprimir planilla en blanco"><i class="fa fa-print"></i></a>
    {% endif %}
    {% if is_granted('ROLE_INSCRIPCION_PLANILLA_NEW') %}
        {#<a  href="#1" class="show-sv" onclick="$('.page-header h1').toggle();$.Planilla.add('{{ path('planilla_new') }}')" href="#globalSubView" data-startFrom="right"">#}
        <button title="Agregar un planillade buena fe en el segmento" onclick="$.Default.planilla.add('{{ entity.id }}')" class="btn btn-xs btn-green"><i class="fa fa-plus fa-white"></i></button>
    {% endif %}
</div>
<div class="visible-xs visible-sm hidden-md hidden-lg">
    <div class="btn-group">
        <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
            <i class="fa fa-cog"></i> <span class="caret"></span>
        </a>
        <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
            {% if is_granted('ROLE_INSCRIPCION_PLANILLA_PRINT') %}
                <li>
                    <a role="menuitem" tabindex="-1" href="href="{{ path('planilla_print', {'segmento': entity.id}) }}"">
                        <i class="fa fa-print"></i> Imprimir
                    </a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_INSCRIPCION_PLANILLA_NEW') %}
                <li>
                    <a title="Agregar un planillade buena fe en el segmento" onclick="$.Default.planilla.add('{{ entity.id }}')" role="menuitem" tabindex="-1" href="#2">
                        <i class="fa fa-plus"></i> Nueva
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>