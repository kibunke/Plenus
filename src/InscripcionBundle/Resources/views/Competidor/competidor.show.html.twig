<table class="table table-bordered table-condensed">
	<tr class="info"><th>{{ entity.planillas | length }} - Planillas</th><th>{{ entity.segmentos | length }} - Segmentos</th></tr>
	<tr>
        <td>
            {% for planilla in entity.planillas %}
                <li>{{ planilla.getNumero() }}</li>
            {% endfor %}
        </td>
        <td>
            {% for segmento in entity.segmentos %}
                <li>{{ segmento.getNombreCompleto() }}</li>
            {% endfor %}
        </td>
    </tr>
	{#<tr class="info"><th colspan="1">Email</th><th colspan="2">Telefonos</th></tr>
	<tr><td colspan="1">{{ entity.enteJuridico.email }}</td><td colspan="2">{{ entity.enteJuridico.telefonos }}</td></tr>
	<tr class="info"><th colspan="3">Descripción</th></tr>
	<tr><td colspan="3">{{ entity.enteJuridico.descripcion }}</td></tr>
	<tr class="info"><th colspan="3">Tipo ente </th></tr>
	<tr><td colspan="3">{{ entity.enteJuridico.tipoEnteJuridico.nombre }}</td></tr>
	<tr class="info"><th colspan="2">Departamento</th><th>Localidad</th></tr>
	<tr><td colspan="2">{{ entity.enteJuridico.domicilio.localidad.departamento.nombre }}</td><td>{{ entity.enteJuridico.domicilio.localidad.nombre }}</td></tr>
	<tr class="info"><th>Calle</th><th>Número</th><th>CP</th></tr>
	<tr><td>{{ entity.enteJuridico.domicilio.calle }}</td><td>{{ entity.enteJuridico.domicilio.numero }}</td><td>{{ entity.enteJuridico.domicilio.codigoPostal }}</td></tr>
    #}
</table>

